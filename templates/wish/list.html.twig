{% extends 'base.html.twig' %}

{% block title %}Liste{% endblock %}

{% block body %}

    <h1 class="typo_jouer_espace m-4" style="text-align: center">Welcome on Wishes List</h1>


    <div class="list-unstyled container card-custom ">
        <ul class="list-unstyled">
            {% for wishes in wish %}
            {% if wishes.isPublished %}
            <li>
                <ol class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-start btn btn-warning my-1">
                        <a href="{{ path('detail', {'id': wishes.id}) }}" class="w-100 text-decoration-none text-dark">
                            <div class="d-flex justify-content-between align-items-center w-100">
                                <div>
                                    <h5>{{ wishes.title }}</h5>
                                </div>
                                <div class="flex-column text-end">
                                    <em>[{{ wishes.category.name }}]</em>
                                </div>
                            </div>
                        </a>
                        <div class="preview-tooltip">
                            <img class="preview = 20%" src="{{ asset(poster_dir ~ '/' ~ wishes.posterFile) }}" alt="Preview" width="300">
                        </div>
                    </li>



            </li>
                </ol>
                {% endif %}
                {% endfor %}
        </ul>

        <div class="d-flex justify-content-center align-items-center">
            <div>
                <img src="{{ asset('img/fleur.png') }}" alt="" class="img-fluid" style="transform: scale(1.7);">
            </div>
        </div>



    </div>



{% endblock %}
